  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon",
      "args": ["${workspaceFolder}/make.js", "run"],
      "cwd": "${workspaceFolder}/src/"
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Debug tests",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "command": "npm test"
    },
  ]
}
